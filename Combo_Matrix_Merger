Sig_Genes <- getBM(c('external_gene_name', 'description','gene_biotype','external_synonym','name_1006','definition_1006','phenotype_description'), 'external_gene_name', Unnormalized_Counts_Sig_Genes$GENE.ID, ensembl.con)

